<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="50dp"
    android:padding="2dp"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/senderchatdrawable"
        android:id="@+id/layoutforwardmsg"
        >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sender Message displays here"
    android:textSize="18sp"
    android:textColor="@color/black"
    android:paddingRight="40dp"
    android:paddingBottom="7dp"
    android:paddingTop="7dp"
    android:id="@+id/sendermsg"
    android:paddingLeft="7dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/timeofmessage"
   android:textSize="10sp"
    android:layout_toRightOf="@+id/sendermsg"
    android:layout_marginLeft="-40dp"
    android:text="20:00"
    android:padding="7dp"
    android:layout_alignBottom="@+id/sendermsg"
    android:textColor="#784552"/>
    </RelativeLayout>

</RelativeLayout>